{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\MinGW\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.cpp", // 编译目录
                "-I",
                "${workspaceFolder}/include", // 头文件搜索目录
                "-o",
                "${workspaceFolder}/build/program.exe" //.exe存放目录
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: C:\\MinGW\\mingw64\\bin\\g++.exe"
        }
    ]
}