{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "cppbuild",
            "command": "C:\\MinGW\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "-Wall",
                "src/*.cpp",
                "-I",
                "include",
                "-o",
                "build/program_debug.exe"
            ],
            "group": "build"
        },
        {
            "label": "Build Release",
            "type": "cppbuild",
            "command": "C:\\MinGW\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O2",
                "-DNDEBUG",
                "-s",
                "-march=native",
                "src/*.cpp",
                "-I",
                "include",
                "-o",
                "build/program_release.exe"
            ],
            "group": "build"
        }
    ]
}